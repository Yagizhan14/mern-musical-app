{
  "name": "mern-music-app",
  "version": "1.0.0",
  "description": "Basic music app with MERN stack",
  "main": "server.js",
  "engines": {
    "node": "10.x"
  },
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "client-install": "npm install --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG npm install --prefix client && npm run build --prefix client"
  },
  "author": "Yagizhan Avci",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^4.1.1",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.4"
  },
  "devDependencies": {
    "nodemon": "^1.19.1"
  }
}
